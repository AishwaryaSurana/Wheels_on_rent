        </activity>
        <activity android:name="TWActivity"></activity>
        <activity android:name="VehicleDetailActivity"></activity>
        <activity android:name="VehicleList"></activity>
        <activity android:name="AboutVehicleActivity"></activity>
        <activity android:name="AddVehicleActivity"></activity>
        <activity android:name="EditVehicle"></activity>
        <activity android:name="LoginActivity"></activity>
        <activity android:name="RegistrationActivity"></activity>
        <activity android:name="SplashScreen"></activity>
        <activity android:name="Terms"></activity>
        <activity android:name="VehiclePhotoActivity"></activity>
        <activity android:name="ViewVehicleActivity">
