        android:theme="@style/AppTheme" android:persistent="false" android:hardwareAccelerated="false">
        <activity android:name="FWActivity"></activity>
        <activity android:name="HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
